class Exogress < Formula
  desc "Exogress command-line client"
  homepage "https://www.exogress.com/"
  version "{{ VERSION }}"
  url "{{ MACOS_URL }}"
  sha256 "{{ MACOS_SHA256 }}"

  if OS.linux?
    url "{{ LINUX_URL }}"
    sha256 "{{ LINUX_SHA256 }}"
  end

  def install
    bin.install "exogress"
  end
end
